{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers-contrib/features/vue-cli:2": {
      "startCommand": "npm run serve"
    },
    "ghcr.io/devcontainers-contrib/features/firebase-cli:2": {
      "startCommand": "firebase emulators:start"
    }
  },
  "postCreateCommand": "npm install && firebase login && firebase init emulators",
  "remoteUser": "vscode",
  "shutdownAction": "stopContainer"
}